<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="data"
            type="com.aligmohammad.doctorapp.data.model.firebasemodels.AppointmentFirebaseModel" />

        <variable
            name="listener"
            type="com.aligmohammad.doctorapp.ui.adapters.OnMenuItemClick" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:onClick="@{listener::onClick}"
        android:tag="@{data.userId}">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/doctorImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="@string/doctor_image"
                android:imageUrl="@{data.placeId}"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <LinearLayout
                android:id="@+id/middleSectionLinear"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/doctorImage"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/doctorName"
                    style="@style/TextAppearance.AppCompat.Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{data.userId}" />

                <TextView
                    android:id="@+id/doctorLocation"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{data.userId}"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/doctorRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{data.date}"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/doctorTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{data.time}"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/middleRightSectionLinear"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/middleSectionLinear"
                app:layout_constraintTop_toTopOf="parent">

                <Button
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:text="More"
                    android:id="@+id/moreButton"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <Button
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:text="Cancel"
                    android:id="@+id/cancelButton"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>
